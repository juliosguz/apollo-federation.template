{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "src",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}